mixin userForm()

    form(action="" method="POST")
        .form_input 
            label(for="user_name") User name:
            input(type="text" name="user_name" id="user_name" required)
        
        .form_input 
            label(for="email") Email: 
            input(type="email" name="email" id="email" required)
        
        .form_input 
            label(for="confirm_email") Confirm Email: 
            input(type="email" name="confirm_email" id="confirm_email" required)

        .form_input 
            label(for="password") Password:
            input(type="password" name="password" id="password" required)

        .form_input 
            label(for="confirm_password") Confrim Password:
            input(type="password" name="confirm_password" id="confirm_password" required)
        
        .form_input 
            button(type="submit" class="button_small") CONFIRM